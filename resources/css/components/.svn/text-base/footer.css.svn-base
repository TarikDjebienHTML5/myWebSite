@CHARSET "UTF-8";
/*
 * CSS3 of my web site
 * @author : DJEBIEN Tarik
 * @version : css 3.0
 * @Object : CSS Style for HTML5 footer component
 * @Browsers : Firefox, Safari, Chrome
 */
 
footer#myFooter {
	background-color: rgba(255,255,255,0.15);
	margin: 7px;
	padding: 3px;
	border: 1px solid rgba(122,124,125,.1);
	box-shadow: 6px 6px 6px rgba(122,124,125,.1), -1px -1px 0 rgba(0,0,0,.1) inset;
	-webkit-box-shadow: 6px 6px 6px rgba(122,124,125,.1), -1px -1px 0 rgba(0,0,0,.1) inset;
}

footer #copyright, footer #languagesSelection {
	display: inline-block;
}

footer #copyright {
	width: 60%;
	float: left;
	margin: 2px;
	padding: 2px;
	color: black;
	text-shadow: 14px 6px 1.4px rgba(0,0,0,0.6);
}

footer #languagesSelection {
	float: right;
	margin: 2px;
	padding: 2px;
}

footer #languagesSelection img {
	float: right;
}