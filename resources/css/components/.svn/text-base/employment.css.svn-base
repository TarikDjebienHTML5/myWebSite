section#mainSection article#myEmployment
{
	border-radius: 5px;
	background-color: rgba(255,255,255,0.7);
	text-align: center;
	border: 1px solid;
}

section#mainSection article#myEmployment img
{
	-webkit-border-radius: 50%;
	border-radius: 50%;
	background-color: rgba(171,171,171,0.08);
	overflow: visible;
	border: 1px solid transparent;
	margin: auto;
	box-shadow: inset 1px 1px 0 rgba(0,0,0,.1),inset 0 -1px 0 rgba(0,0,0,.07);
	-webkit-box-shadow: inset 1px 1px 0 rgba(0,0,0,.1),inset 0 -1px 0 rgba(0,0,0,.07);
	position: relative;
	top: -65px;
}

section#mainSection article#myEmployment h1,
section#mainSection article#myEmployment h2,
section#mainSection article#myEmployment h3,
section#mainSection article#myEmployment h4,
section#mainSection article#myEmployment h5,
section#mainSection article#myEmployment h6
{
	text-align: center;
	margin: 3px;
	padding: 1px;
}

section#mainSection article#myEmployment #resume
{
	text-align: justify;
	margin: auto;
	width: 70%;
}

section#mainSection article#myEmployment #experiences
{
	text-align: center;
}

section#mainSection article#myEmployment .experience
{
	border-radius: 5px;
	background-color: rgba(255,255,255,0.3);
	text-align: justify;
	border: 1px solid transparent;
	margin-top: 10px;
	margin-bottom: 10px;
	width: 85%;
	margin-left: auto;
	margin-right: auto;
}

section#mainSection article#myEmployment .experience hr
{
	margin: auto;
	width: 70%;
}

section#mainSection article#myEmployment .mission
{
	margin-left: auto;
	margin-right: auto;
	margin-top: 10px;
	padding: 5px;
}