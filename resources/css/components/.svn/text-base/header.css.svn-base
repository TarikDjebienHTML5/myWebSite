@CHARSET "UTF-8";
/*
 * CSS3 of my web site
 * @author : DJEBIEN Tarik
 * @version : css 3.0
 * @Object : CSS Style for HTML5 header component
 * @Browsers : Firefox, Safari, Chrome
 */
 
header#menu {
	position: fixed;
 	height: 60px;
 	/* 60px to make the wrapper go all the way to the bottom of the topbar */
}
 
header#menu nav#menubar {
 	box-shadow: 6px 6px 6px rgba(0, 0, 0, 0.7);
 	opacity : 0.95;
}

header#menu nav#menubar #projectTitle {
	color: black;
	text-shadow: 5px 3px 4px rgba(0,0,0,0.6);
}

#currentTime {
	display: inline-block;
	font-size: 15px;
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}

header#menu nav#menubar span {
	padding-left: 7px;
}

header#menu nav#menubar a:active {
	background-color: rgba(44,44,44,0.9);
	color: white;
}